<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/interEt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="관심사 입력"/>

        <ImageButton
            android:id="@+id/interVoice"
            android:layout_width="30dp"
            android:layout_marginLeft="10dp"
            android:layout_height="30dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/voice_bg"
            android:src="@drawable/ic_settings_voice_black_24dp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/interSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="저장"
        android:textColor="#FFF"
        android:layout_marginTop="10dp"
        android:background="@drawable/save_bg"/>

    <Button
        android:id="@+id/interHelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="도움말"
        android:textColor="#FFF"
        android:layout_marginTop="40dp"
        android:background="@drawable/help_bg"
        />
    
</LinearLayout>